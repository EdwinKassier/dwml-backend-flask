# Environment Configuration Template
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# Database Configuration
# For local development with Celery, use SQLite (limitations apply)
# For production with Celery, use PostgreSQL
DATABASE_URL=sqlite:///app.db

# API Configuration
API_KEY=your-api-key-here
KRAKEN_API_URL=https://api.kraken.com/0/public/OHLC

# Security Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Production Configuration
PORT=8080
HOST=0.0.0.0

# Celery Configuration
# Redis is required for Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Feature Flags
ENABLE_NEW_LOGIC=False
ENABLE_CACHING=False
ENABLE_MONITORING=True
ENABLE_CELERY=True
